<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	method="upgrade"
	version="1.6">
	<name>MOD_PAGUEMEFACIL</name>
	<author>Emerson Rocha Luiz</author>
	<creationDate>2011-08-11</creationDate>
	<copyright>Copyright (C) 2005 - 2011 Webdesign Assessoria em Tecnologia da Informacao.</copyright>
	<license>GNU General Public License version 3</license>
	<authorEmail>emerson@webdesign.eng.br</authorEmail>
	<authorUrl>http://fititnt.org</authorUrl>
	<version>1.0alpha</version>
	<description>MOD_PAGUEMEFACIL_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_paguemefacil">mod_paguemefacil.php</filename>
                <filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
                <folder>css</folder>
                <folder>languages</folder>
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB/en-GB.mod_paguemefacil.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_paguemefacil.sys.ini</language>	
	</languages>
		
	<config>
		<fields name="params">
			<fieldset name="basic">
                                <field 
                                    name="querymode" 
                                    type="radio" 
                                    default="1" 
                                    label="MOD_PAGUEMEFACIL_QUERYMODE_LABEL" 
                                    description="MOD_PAGUEMEFACIL_QUERYMODE_DESC">
                                  <option value="0">MOD_PAGUEMEFACIL_QUERYMODE_STEPTOSTEP</option>
                                  <option value="1">MOD_PAGUEMEFACIL_QUERYMODE_RAWQUERY</option>
                                </field>
                            
                                <field 
                                    name="advanced" 
                                    type="radio" 
                                    default="0" 
                                    label="MOD_PAGUEMEFACIL_ADVANCED_LABEL" 
                                    description="MOD_PAGUEMEFACIL_ADVANCED_DESC">
                                  <option value="1">JYES</option>
                                  <option value="0">JNO</option>
                                </field>
                                <field
					name="modbefore"
					type="textarea"
                                        cols="45"
                                        rows="8"
					label="MOD_PAGUEMEFACIL_MODBEFORE_LABEL"
					description="MOD_PAGUEMEFACIL_MODBEFORE_DESC">
				</field>
                                <field
					name="modafter"
					type="textarea"
                                        cols="45"
                                        rows="8"
					label="MOD_PAGUEMEFACIL_MODAFTER_LABEL"
					description="MOD_PAGUEMEFACIL_MODAFTER_DESC">
				</field>                                
                                <field 
                                    name="debug" 
                                    type="radio" 
                                    default="0" 
                                    label="MOD_PAGUEMEFACIL_DEBUG_LABEL" 
                                    description="MOD_PAGUEMEFACIL_DEBUG_DESC">
                                  <option value="1">JYES</option>
                                  <option value="0">JNO</option>
                                </field>
                         </fieldset>
                         <fieldset name="STEPTOSTEP">
                                 <field
					name="select"
					type="text"
                                        size="45"
					label="MOD_PAGUEMEFACIL_SELECT_LABEL"
					description="MOD_PAGUEMEFACIL_SELECT_DESC"
					default="">
				</field>
                                <field
					name="table"
					type="text"
                                        size="45"
					label="MOD_PAGUEMEFACIL_TABLE_LABEL"
					description="MOD_PAGUEMEFACIL_TABLE_DESC"
					default="">
				</field>
                                <field
					name="where"
					type="text"
                                        size="45"
					label="MOD_PAGUEMEFACIL_WHERE_LABEL"
					description="MOD_PAGUEMEFACIL_WHERE_DESC"
					default="">
				</field>
                                <field
					name="where2"
					type="text"
                                        size="45"
					label="MOD_PAGUEMEFACIL_WHERE_LABEL"
					description="MOD_PAGUEMEFACIL_WHERE_DESC"
					default="">
				</field>
                                <field
					name="where3"
					type="text"
                                        size="45"
					label="MOD_PAGUEMEFACIL_WHERE3_LABEL"
					description="MOD_PAGUEMEFACIL3_WHERE_DESC"
					default="">
				</field>
                                <field
					name="where3"
					type="text"
                                        size="45"
					label="MOD_PAGUEMEFACIL_WHERE3_LABEL"
					description="MOD_PAGUEMEFACIL_WHERE3_DESC"
					default="">
				</field>
                                <field
					name="order"
					type="text"
                                        size="45"
					label="MOD_PAGUEMEFACIL_ORDER_LABEL"
					description="MOD_PAGUEMEFACIL_ORDER_DESC"
					default="">
				</field>
                                <field
					name="order2"
					type="text"
                                        size="45"
					label="MOD_PAGUEMEFACIL_ORDER2_LABEL"
					description="MOD_PAGUEMEFACIL_ORDER2_DESC"
					default="">
				</field>
                                <field
					name="order3"
					type="text"
                                        size="45"
					label="MOD_PAGUEMEFACIL_ORDER3_LABEL"
					description="MOD_PAGUEMEFACIL_ORDER3_DESC"
					default="">
				</field>
                         </fieldset>
                         <fieldset name="rawquery">
                                 <field
					name="rawquery"
					type="textarea"
                                        cols="45"
                                        rows="8"
					label="MOD_PAGUEMEFACIL_RAWQUERY_LABEL"
					description="MOD_PAGUEMEFACIL_RAWQUERY_DESC"
					default="SELECT c.id, .c.title, u.name AS author
FROM #__content AS c
LEFT JOIN #__users AS u ON u.id = c.created_by
WHERE featured = 1
LIMIT 5">
				</field>
                         </fieldset> 
                         <fieldset name="APARENCE">
                            <field
                                    name="layout"
                                    type="modulelayout"
                                    default="default" 
                                    label="JFIELD_ALT_LAYOUT_LABEL"
                                    description="JFIELD_ALT_MODULE_LAYOUT_DESC">
                            </field>
                            
                            <field type="spacer" name="MOD_PAGUEMEFACIL_SPACER_HEADINGTRANSLATE"/>
                            
                            <field 
                                name="jtextheading" 
                                type="radio" 
                                default="1" 
                                label="MOD_PAGUEMEFACIL_JTEXTHEADING_LABEL" 
                                description="MOD_PAGUEMEFACIL_JTEXTHEADING_DESC">
                              <option value="1">JYES</option>
                              <option value="0">JNO</option>
                            </field>
                            <field
                                    name="jtextheadingtext"
                                    type="text"
                                    label="MOD_PAGUEMEFACIL_JTEXTHEADINGTEXT_LABEL"
                                    description="MOD_PAGUEMEFACIL_JTEXTHEADINGTEXT_DESC"
                                    default="">
                            </field>                            
                            
                            <field type="spacer" name="MOD_PAGUEMEFACIL_SPACER_TABLECSS"/>
                            
                            <field
                                    name="tableclass"
                                    type="text"
                                    label="MOD_PAGUEMEFACIL_TABLECLASS_LABEL"
                                    description="MOD_PAGUEMEFACIL_TABLECLASS_DESC"
                                    default="category">
                            </field>
                            <field
                                    name="tablerowprefix"
                                    type="text"
                                    label="MOD_PAGUEMEFACIL_TABLEROWPREFIX_LABEL"
                                    description="MOD_PAGUEMEFACIL_TABLEROWPREFIX_DESC"
                                    default="cat-list-row">
                            </field>
                            
                            <field type="spacer" name="MOD_PAGUEMEFACIL_SPACER_LINK"/>
                            
                            <field 
                                    name="linkuse" 
                                    type="radio" 
                                    default="1" 
                                    label="MOD_PAGUEMEFACIL_USELINKS_LABEL" 
                                    description="MOD_PAGUEMEFACIL_USELINKS_DESC">
                                  <option value="1">JYES</option>
                                  <option value="0">JNO</option>
                            </field>
                            <field
                                    name="linktranslate"
                                    type="list"
                                    label="MOD_PAGUEMEFACIL_LINKTRANSLATE_LABEL"
                                    description="MOD_PAGUEMEFACIL_LINKTRANSLATE_DESC"
                                    default="0">
                                  <option value="0">MOD_PAGUEMEFACIL_LINK_NOTRANSLATE</option>
                                  <option value="1">MOD_PAGUEMEFACIL_LINK_TRANSLATE</option>
                                  <option value="2">MOD_PAGUEMEFACIL_LINK_TRANSLATEEADDBASE</option>
                            </field>
                            <field
                                    name="linkitens"
                                    type="text"
                                    size="45"
                                    label="MOD_PAGUEMEFACIL_LINKITENS_LABEL"
                                    description="MOD_PAGUEMEFACIL_LINKITENS_DESC"
                                    default="id,title">
                            </field>
                            <field
                                    name="linkvar"
                                    type="text"
                                    label="MOD_PAGUEMEFACIL_LINKVAR_LABEL"
                                    description="MOD_PAGUEMEFACIL_LINKVAR_DESC"
                                    default="id">
                            </field>
                            <field
                                    name="linktarget"
                                    type="list"
                                    label="MOD_PAGUEMEFACIL_LINKTARGET_LABEL"
                                    description="MOD_PAGUEMEFACIL_LINKTARGET_DESC"
                                    default="">
                                  <option value="">MOD_PAGUEMEFACIL_LINK_NONE</option>
                                  <option value="_self">MOD_PAGUEMEFACIL_LINK_SELF</option>
                                  <option value="_blank">MOD_PAGUEMEFACIL_LINK_BLANK</option>
                                  <option value="_parent">MOD_PAGUEMEFACIL_LINK_PARENT</option>
                            </field>
                         </fieldset>
		</fields>
	</config>
</extension>
